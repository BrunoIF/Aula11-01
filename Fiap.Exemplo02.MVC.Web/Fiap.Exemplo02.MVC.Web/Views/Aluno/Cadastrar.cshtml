@model Fiap.Exemplo02.MVC.Web.Models.Aluno

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Aluno</h2>
@Helper.Message(TempData["msg"], "alert alert-success")


@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(a => a.Nome)
        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control", @placeholder = "John Doe" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.DataNascimento)
        @Html.TextBoxFor(a => a.DataNascimento, new { @class = "form-control", @type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Desconto)
        @Html.TextBoxFor(a => a.Desconto, new { @class = "form-control", @placeholder = "2" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Bolsa)
        @Html.CheckBoxFor(a => a.Bolsa)
    </div>
    @Helper.Submit("Salvar", "btn btn-success")
}

